<div class="burger-row">

<div class="notEatenBurgers">
    <h2>Burgers that are not eaten!</h2>

    <ul>
      {{#each burgers}}
        {{#unless eaten}}
          {{> burgers/burger-block eaten=true}}
        {{/unless}}
      {{/each}}
    </ul>
</div>

<div class="eatenBurgers">
  <h2>Burgers that have already been eaten!</h2>

  <ul>
    {{#each burgers}}
      {{#if eaten}}
        {{> burgers/burger-block eaten=false}}
      {{/if}}
    {{/each}}
  </ul>
  </div>

